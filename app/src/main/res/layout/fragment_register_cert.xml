<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:background="#F2F2F2"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phonenumf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="휴대폰번호"
            android:fontFamily="@font/montserrat_regular"
            android:textColorHint="#C9C9C9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

            <EditText
                android:id="@+id/phonenum"
                android:layout_width="312dp"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:background="@drawable/ic_frame_underline_black"
                android:inputType="phone"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btn_cert"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="256dp"
            android:layout_marginTop="17.5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cert">
        </ImageButton>

        <ImageButton
            android:id="@+id/ic_check"
            android:layout_width="12dp"
            android:visibility="gone"
            android:enabled="false"
            android:layout_marginLeft="296.5dp"
            android:layout_marginTop="17.5dp"
            android:layout_height="9dp"
            android:background="@drawable/ic_check__2_">
        </ImageButton>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/certnumf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="인증번호"
            android:textColorHint="#C9C9C9"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

            <EditText
                android:id="@+id/certnum"
                android:layout_width="312dp"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:background="@drawable/ic_frame_underline_black"
                android:inputType="numberDecimal"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_marginLeft="270dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="17.5dp"
            android:text="03:00"
            android:layout_height="wrap_content"
            android:textColor="#FF6465">

        </TextView>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/validview"
        android:layout_width="312dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_vector_i" />

        <TextView
            android:id="@+id/checkvalid"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:text="인증번호를 다시 확인해주세요"
            android:textColor="#FF0000"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_retry"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:textColor="#000000"
            android:background="#00000000"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="1dp"
            android:text="다시받기"
            android:layout_marginLeft="86.56dp"
            android:layout_height="wrap_content">
        </Button>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:text="완료"
        android:layout_marginTop="280dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>