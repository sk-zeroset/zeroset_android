<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="18dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/btn_back" />

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="26dp"
                android:background="@android:color/transparent"

                app:layout_constraintTop_toTopOf="@id/btn_back"
                app:layout_constraintRight_toLeftOf="@id/btn_cart"
                app:srcCompat="@drawable/btn_search" />

            <ImageButton
                android:id="@+id/btn_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_back"
                app:srcCompat="@drawable/btn_cart" />

            <TextView
                android:id="@+id/cateText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="생활"
                android:textSize="30sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/btn_back" />

            <ImageButton
                android:id="@+id/btn_add_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:layout_constraintLeft_toLeftOf="@+id/btn_cart"
                app:layout_constraintRight_toRightOf="@id/btn_filter"
                app:layout_constraintTop_toTopOf="@id/cateText1"
                app:srcCompat="@drawable/btn_downpoint" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/rank_image"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:background="#EFEEF5"
                app:layout_constraintTop_toBottomOf="@id/btn_add_next"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:id="@+id/pick_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="코가 뚫리는 박하향이 나는 \n대나무 칫솔"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/rank_image"/>

            <Button
                android:id="@+id/hash_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recycle"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintLeft_toLeftOf="@id/rank_image"
                app:layout_constraintBottom_toBottomOf="@id/rank_image"/>

            <Button
                android:id="@+id/hash_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintLeft_toRightOf="@id/hash_tag1"
                app:layout_constraintBottom_toBottomOf="@id/rank_image"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="생활 전체 상품"
                android:textSize="25sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@id/pick_info" />

            <ImageButton
                android:id="@+id/btn_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                app:layout_constraintRight_toRightOf="@id/btn_cart"
                app:layout_constraintTop_toTopOf="@id/total"
                app:srcCompat="@drawable/ic_btn_filter" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/total_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/total"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
